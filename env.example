# NCryp Production Environment Configuration
# Copy this to env.local for local development
# For Railway deployment, set these as environment variables in Railway dashboard

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Frontend URL (Netlify)
# Set this in Railway environment variables
FRONTEND_URL=https://your-app-name.netlify.app

# Backend URL (Railway)
# Set this in Netlify environment variables
VITE_API_URL=https://your-app-name.railway.app

# =============================================================================
# FLASK CONFIGURATION
# =============================================================================

# Flask Environment (set to production for Railway)
FLASK_ENV=production
FLASK_DEBUG=False

# Secret Key (generate a new one for production)
# Use: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-change-this

# =============================================================================
# ADMIN CONFIGURATION
# =============================================================================

# Admin credentials (generate using: python generate_admin_password.py)
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=your-generated-password-hash
ADMIN_SESSION_TIMEOUT=3600

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================

# Storage Type: local, s3, gcs, azure
# For Railway: Use 'local' for temporary storage or cloud storage for persistence
STORAGE_TYPE=local

# Local Storage (Railway ephemeral storage - data will be lost on restart)
LOCAL_STORAGE_PATH=./uploads

# =============================================================================
# CLOUD STORAGE (RECOMMENDED FOR PRODUCTION)
# =============================================================================

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=ncryp-secure-storage

# Google Cloud Storage Configuration
GCS_BUCKET_NAME=ncryp-secure-storage

# Azure Blob Storage Configuration
AZURE_CONNECTION_STRING=your-azure-connection-string
AZURE_CONTAINER_NAME=ncryp-secure-storage

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# File Upload Limits
MAX_FILE_SIZE=104857600  # 100MB in bytes
ALLOWED_EXTENSIONS=pdf,txt,jpg,jpeg,png,gif,doc,docx,xls,xlsx,csv,zip,rar

# CORS Configuration (for production)
# Set to your Netlify domain
CORS_ORIGINS=*

# =============================================================================
# OPTIONAL FEATURES
# =============================================================================

# ClamAV Configuration (optional - requires ClamAV setup)
# CLAMAV_HOST=localhost
# CLAMAV_PORT=3310

# Database Configuration (for persistent storage)
# DATABASE_URL=postgresql://user:password@localhost/ncryp
# REDIS_URL=redis://localhost:6379

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Log Level
LOG_LEVEL=INFO

# Enable request logging
ENABLE_REQUEST_LOGGING=True

# =============================================================================
# FIREBASE CONFIGURATION
# =============================================================================

# Firebase Service Account (REQUIRED for admin authentication)
# Download from Firebase Console > Project Settings > Service Accounts
# Generate new private key and save as JSON file
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json

# Firebase Project Configuration (for reference)
# These should match your frontend Firebase config
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com

# =============================================================================
# RAILWAY SPECIFIC
# =============================================================================

# Railway automatically sets these:
# PORT=5000
# RAILWAY_STATIC_URL=your-static-url

# Firebase Configuration
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json 